<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.superfit">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperFit">
        <activity android:name=".recipe.RecipeActivity">

        </activity>
        <activity android:name=".recipes.Recipes">

        </activity>
        <activity android:name=".mainScreen.MainScreen">
            <intent-filter>
                <action android:name="com.example.MAINSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".loadScreens.InputCode" />
        <activity android:name=".loadScreens.Registration" />
        <activity android:name=".loadScreens.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".loadScreens.MainActivity">
            <intent-filter>
                <action android:name="com.example.SIGNIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>